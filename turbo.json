{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "//#check": {},
    "//#format": {},

    "db:push": {},
    "db:generate": {},
    "db:migrate": {},

    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },

    "lint": {
      "dependsOn": ["//#check", "^lint"]
    },

    "typecheck": {
      "dependsOn": ["//#check", "^typecheck"]
    },

    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
